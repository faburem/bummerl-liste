{
  "name": "bummerl-liste",
  "private": true,
  "version": "1.0.0",
  "description": "Die Companion App zum Bauernschnapsen",
  "main": "meteor run",
  "dependencies": {
    "babel-runtime": "^6.23.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.17.0",
    "eslint-config-airbnb-base": "^11.1.1",
    "eslint-import-resolver-meteor": "^0.3.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-meteor": "^4.0.1"
  },
  "scripts": {
    "lint": "eslint --quiet ."
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb-base",
      "plugin:meteor/recommended"
    ],
    "env": {
      "meteor": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "import/no-unresolved": [
        2,
        { "ignore": ["^meteor"] }
      ],
      "meteor/no-session": [1]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/faburem/bummerl-liste.git"
  },
  "keywords": [
    "bummerl",
    "liste",
    "meteor",
    "javascript"
  ],
  "author": "Fabian Kromer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/faburem/bummerl-liste/issues"
  },
  "homepage": "https://github.com/faburem/bummerl-liste#readme"
}
